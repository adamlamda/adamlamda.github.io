          <mi>z</mi>
          <mrow class="MJX-TeXAtom-ORD">
            <mn>1</mn>
          </mrow>
        </msub>
        <mo>,</mo>
        <msub>
          <mi>z</mi>
          <mrow class="MJX-TeXAtom-ORD">
            <mn>2</mn>
          </mrow>
        </msub>
        <mo stretchy="false">)</mo>
        <mo>&#x22C5;<!-- ⋅ --></mo>
        <mi>&#x03BB;<!-- λ --></mi>
        <mo>=</mo>
        <mo stretchy="false">(</mo>
        <msub>
          <mi>z</mi>
          <mrow class="MJX-TeXAtom-ORD">
            <mn>1</mn>
          </mrow>
        </msub>
        <mi>&#x03BB;<!-- λ --></mi>
        <mo>,</mo>
